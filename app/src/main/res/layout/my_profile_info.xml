<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    app:cardCornerRadius="10dp"
    app:cardElevation="4dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_marginEnd="16dp"
    android:layout_marginStart="16dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textDirection="rtl"
        android:layoutDirection="rtl">
        <ImageView
            android:id="@+id/profile_picture"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:src="@drawable/profile_place_holder"/>
        <TextView
            android:id="@+id/name_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_below="@+id/profile_picture"
            android:text="نام:"/>
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/name_title"
            android:layout_marginStart="8dp"
            android:layout_below="@+id/profile_picture"
            android:text="اینم اسم من"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/description_title"
            android:layout_below="@+id/name_title"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="توضیحات:"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/description"
            android:layout_toEndOf="@id/description_title"
            android:layout_marginStart="8dp"
            android:layout_below="@id/name"
            android:layout_marginTop="8dp"
            android:text="اینم توضیحات من"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/CreatedAt"
            android:layout_below="@id/description_title"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="زمان عضویت:"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>
